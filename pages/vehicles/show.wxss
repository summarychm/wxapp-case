/* pages/vehicles/show.wxss */

/* 顶部图文简介 */
.cover{
  position: relative;
}
.cover image, .cover video{
  height: 38.2vh;
}
.cover .content{
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  padding: 8px 16px;
  position: absolute;
  bottom: 0;
  width: 100%;
  box-sizing: border-box;
  color: rgba(255, 255, 255, 0.85);
  text-shadow: 0 5px 19px rgba(0, 0, 0, 0.5);
  background-image: linear-gradient(rgba(0,0,0,0) 7%, rgba(0,0,0,1));
}

.cover .header{
  font-size:36rpx;
  font-weight: normal;
  text-transform: uppercase;
  letter-spacing: 4rpx;
}

.cover .sub-header{
  font-size: 26rpx;
  font-weight: normal;
  text-transform: uppercase;
  letter-spacing: 4rpx;
}
.cover .meta{
  font-size: 26rpx;
}


/* 详细配置参数 */
.spec {
  display:flex;
  border-bottom: 1px solid #ededed;
  font-size:24rpx;
}
.spec .item{
  border-right: 1px solid #ededed;
  width: 100%;
  padding: 64rpx;
}
.spec .item .value text{
  font-size: 60rpx;
  margin-right: 8rpx;
}

/* 简介 */
.action{
  text-align: center;
  padding: 48px;
}
.action .description{
  margin-bottom: 48rpx;
}

/* 外观与内饰 */
.story{

}
.story.white{
  background: #fff;
}

.story .content{
  display: flex;
  flex-direction: column;
  height: 38.2vh;
  padding-top: 10%;
  text-align: center;
}

.story .header{
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 16ox;
}
.story .sub-header{
 font-size: 28rpx;
  text-transform: uppercase;
  letter-spacing: 6rpx;
  margin-bottom: 8ox;
  color: rgba(0,0,0,0.75);
}
.story .description{
  padding: 0 12%;
}
.story image,.story video{
  height: 41.8vh;
}