<!--pages/stories/show.wxml-->
<videw class="section hero small">
  <video 
    src='{{entity.video}}'
    poster='{{entity.image}}'
    objectFit='cover'
    duration='{{duration_raw}}'
    contrils="{{true}}"
  />
  <view class='content centered'>
    <view class='header'>
      {{entity.header}}
      <view class='sub-header'>{{entity.original_header}}</view>      
    </view>
    <view class='description'>{{entity.description}}</view>
  </view>
</videw>
